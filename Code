#include <bits/stdc++.h>
using namespace std;
string n;
int t;
long long a,b;
main(){
ios_base::sync_with_stdio(false);
cin.tie(0);
cout.tie(0);
cin >> n;
cin >> t;
while(t--){
    cin >> a >> b;
    a=(a-1)%n.size();
    b=(b-1)%n.size();
    if(n[a]==n[b]){
        cout << "Yes" << "\n";
    }
    else{
        cout << "No" << "\n";
    }
}
}
